<?xml version="1.0" encoding="utf-8"?>
<!--
    2nd level - detail data of the first list item.
    This will appear in the ItemDetailFragment (which
    will appear differently depending on the device's size).
-->
<TextView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_detail"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:text="detail of an item"
    android:textIsSelectable="true"
    tools:context=".view.ItemDetailFragment" />